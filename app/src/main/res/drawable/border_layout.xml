<!-- res/drawable/border_layout.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/rosepink" />

    <!-- Optional: Adjust the corner radius for rounded corners -->
    <corners android:radius="8dp" />
</shape>
