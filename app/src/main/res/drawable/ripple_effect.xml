<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Color for the ripple hover -->
    <item android:id="@android:id/mask">
        <!-- Define the ripple effect color for the hover -->
        <shape android:shape="rectangle">
            <solid android:color="@color/darkred" /> <!-- Use darkred for the ripple hover effect -->
        </shape>
    </item>
    <item>
        <!-- Smooth background transition -->
        <shape android:shape="rectangle">
            <solid android:color="@color/rosepink" /> <!-- Background color for the normal state (rosepink) -->
        </shape>
    </item>
</ripple>
