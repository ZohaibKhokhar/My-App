<!-- res/drawable/spinner_bottom_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (transparent or white as needed) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Bottom Border -->
    <item android:top="0.2dp">
        <shape android:shape="rectangle">
            <size android:height="0.3dp" />
            <solid android:color="@color/gray" /> <!-- Customize color as needed -->
        </shape>
    </item>
</layer-list>
